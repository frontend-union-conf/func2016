@import "mixin";

.intro {
  color: var(--colorOpposite);
  background-image: svg-load('skew-mobile.svg'), svg-load('rect.svg');
  background-repeat: no-repeat, no-repeat;
  background-position: 0 0, 0 100%;
  background-size: 100% 100%, 100% 50%;
  margin-top: 6rem;
  margin-bottom: -1px;

  @media (--desktop-viewport) {
    background-image: svg-load('skew.svg'), svg-load('rect.svg');
    margin-top: 0;
  }
}

.intro__inner {
  @mixin containerMain;
  position: relative;
  margin-top: -6rem;
  padding-bottom: 4rem;
  background-image:
    url('../images/plus.png'),
    url('../images/III.png');
  background-position:
    90% 9%,
    20% 81%;
  background-repeat:
    no-repeat,
    no-repeat;

  @media (--desktop-viewport) {
    min-height: 81rem;
    padding-top: 8rem;
    padding-bottom: 0;

    background-image:
      url('../images/plus.png'),
      url('../images/v.png'),
      url('../images/III.png'),
      url('../images/equal.png'),
      url('../images/III.png');
    background-position:
      75% 19%,
      72% 65%,
      24% 31%,
      6% 66%,
      50% 92%;
    background-repeat:
      no-repeat,
      no-repeat,
      no-repeat,
      no-repeat,
      no-repeat;

    &::before {
      content: '';
      display: block;
      background-image: svg-load('bracket.svg');
      background-repeat: no-repeat;
      background-size: contain;
      width: 18rem;
      height: 36.8rem;
      transform: rotate(180deg);

      position: absolute;
      top: 13rem;
      left: 6.4rem;
    }

    &::after {
      content: '';
      display: block;
      background-image: svg-load('bracket.svg');
      background-repeat: no-repeat;
      background-size: contain;
      width: 18rem;
      height: 36.8rem;

      position: absolute;
      top: 31rem;
      right: 6rem;
    }
  }

}

.intro__content {
  background: url('../images/illustration-sm.png') 50% 0 no-repeat;
  max-width: 34.6rem;
  margin-left: auto;
  margin-right: auto;
  min-height: 50rem;
  padding-top: 15.6rem;

  @media (--desktop-viewport) {
    background: url('../images/illustration.png') 3.7rem 0 no-repeat;
    min-height: 44.2rem;
  }
}

.intro__title {
  font-family: var(--fontFamilyMono);
  font-size: 2.8rem;
  line-height: 1.2;
  position: relative;
  z-index: 1;
  margin: 0;

  @media (--desktop-viewport) {
    font-size: 4rem;
  }
}

.intro__title-text {
  margin-left: 4.5rem;
}
